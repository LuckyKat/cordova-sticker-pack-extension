<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="cordova-sticker-pack-extension"
        version="1.0.0">

  <name>iMessage Sticker Pack Extension</name>
  <author>Hernan Zhou</author>

  <description>
    Add a Sticker Pack Extension to your cordova project.
  </description>

  <engines>
    <engine name="cordova" version="&gt;=3.0.0"/>
  </engines>

  <platform name="ios">
    <config-file target="config.xml" parent="/*">
    </config-file>
    <hook type="after_plugin_install" src="hooks/stickers.js"/>
    <hook type="after_plugin_install" src="hooks/copyfolder.js"/>
  </platform>
</plugin>